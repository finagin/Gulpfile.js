#!/bin/bash

curl -O https://finagin.github.io/Gulpfile/Gulpfile.js
curl -O https://finagin.github.io/Gulpfile/Gulpfile.json


if [ ! -f "./package.json" ]
then
    echo "{}" > ./package.json
fi

npm install --save gulp gulp-autoprefixer gulp-concat gulp-csso gulp-file gulp-rimraf gulp-sourcemaps gulp-stylus gulp-uglify
npm install --save-dev browser-sync

yarn


if [ ! -f "./.gitignore" ]
then
    touch ./.gitignore
fi

echo "\nnode_modules" >> ./.gitignore
